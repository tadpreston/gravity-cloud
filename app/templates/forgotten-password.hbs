<div class="row">
  <form class="col s4 offset-s4">
    <h3>FORGOT PASSWORD</h3>
    <p>Enter your email, and we'll send you instructions on how to reset your password</p>

    <div class="row">
      <div class="input-field col s12">
        {{input type="email"}}
        <label for="email">Email</label>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
          <label>
            <input type="checkbox" class="filled-in" />
            <span>I'm not a robot</span>
          </label>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <button type="submit" class="btn red">Reset</button>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <p>
          {{#link-to "login" class="login"}}
            Login
          {{/link-to}}
        </p>
        <p>
          {{#link-to "register" class="register"}}
            Sign Up Free
          {{/link-to}}
        </p>
      </div>
    </div>
  </form>
</div>
